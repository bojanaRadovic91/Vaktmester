<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="@string/choose_lang"
        android:height="75dp"
        android:width="156dp"
        android:lineSpacingMultiplier="1.23"
        android:textSize="26dp"
        android:layout_marginTop="91dp"
        android:layout_marginLeft="102dp"
        android:layout_marginRight="102dp"
        android:layout_gravity="center"
        android:textAllCaps="false"/>
    <ImageView
        android:layout_width="63dp"
        android:layout_height="63dp"
        android:layout_marginRight="148dp"
        android:layout_marginLeft="148dp"
        android:layout_marginTop="49dp"
        android:layout_gravity="center"
        android:src="@drawable/globus"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/drawable_spinner_background"
        android:layout_gravity="center"
        android:layout_margin="50dp"
        android:padding="3dp">

        <ImageView android:id="@+id/imageViewArrow"
            android:layout_width="10dp"
            android:layout_height="5dp"
            android:layout_gravity="right|center"
            android:layout_marginRight="10dp"/>

    <Spinner android:id="@+id/spinnerLanguage"
        android:layout_width="186dp"
        android:layout_height="46dp"
        android:layout_gravity="center_horizontal"/>
    </FrameLayout>

    <Button android:id="@+id/buttonConfirm"
        android:layout_width="130dp"
        android:layout_height="45dp"
        android:text="@string/button_confirm"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:background="@color/orange"/>

</LinearLayout>